enum Category {
  VEGAN
  MEAT
  WITH_MEAT
  SPICY
  SWEET
}

model Pizza {
  id          Int           @id @default(autoincrement())
  name        String
  price       Int
  category    Category
  imgUrl      String
  ingredients Ingredients[]
}

model Ingredients {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  pizzas Pizza[]
  price  Int
}
